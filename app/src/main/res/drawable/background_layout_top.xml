<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" /><!-- 设置背景填充颜色 -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp" /> <!-- 设置上方两个角为弧形，下方两个角不是 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" /> <!-- 设置边框宽度和颜色 -->
</shape>

