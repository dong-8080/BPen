<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login"
    app:startDestination="@id/fragment_login">

    <!--登录页-->
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.bibipentest.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/fragment_register" />
        <action
            android:id="@+id/action_loginFragment_to_findPasswordFragment"
            app:destination="@id/fragment_find_password" />

    </fragment>

    <!--重置密码-->
    <fragment
        android:id="@+id/fragment_reset_password"
        android:name="com.example.bibipentest.fragment.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/fragment_login" />
    </fragment>

    <!--注册页-->
    <fragment
        android:id="@+id/fragment_register"
        android:name="com.example.bibipentest.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/fragment_login" />
    </fragment>

    <!--找回密码页-->
    <fragment
        android:id="@+id/fragment_find_password"
        android:name="com.example.bibipentest.fragment.FixPasswordFragment"
        android:label="fragment_find_password"
        tools:layout="@layout/fragment_find_password">

        <action
            android:id="@+id/action_findPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/fragment_reset_password" />
        <action
            android:id="@+id/action_findPasswordFragment_to_loginFragment"
            app:destination="@id/fragment_login" />
    </fragment>
</navigation>